<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.tjeit.yogiyocopy.ViewOrderInfoActivity">

    <TextView
        android:id="@+id/orderStoreNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시켜먹은 가게가 나올자리"/>

    <TextView
        android:id="@+id/orderZoneNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시켜먹은 지역이 나올자리"/>

    <TextView
        android:id="@+id/orderCostTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30,000원"/>

</LinearLayout>
